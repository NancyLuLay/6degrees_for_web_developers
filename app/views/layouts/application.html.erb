<!DOCTYPE html>
<html>
  <head>
    <title>6Degrees</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyCXTGY7tDNxJzJcdctQIUTzCaX9k_gilk4"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

  </head>

  <body id="app-body">
    <!-- Navbar -->
    <nav id="navbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container topnav">
        <div class="nav-bar header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand topnav lobster hvr-grow" href="http://localhost:3000/">6Degrees</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class= "nav navbar-nav navbar-right" role="tablist">
            <% if user_signed_in? %>
              <li id="welcome-name">Welcome, <%= current_user.first_name %>!</li>
              <li class= "hvr-grow"><%= link_to "Home", posts_path %></li>
              <li class= "hvr-grow"><%= link_to "Profile", user_path(current_user) %></li>
              <li class= "hvr-grow"><%= link_to "Edit my account", edit_user_path(current_user) %></li>
              <li class= "hvr-grow"><%= link_to fa_icon('sign-out'), sessions_path, method: :delete %></li>
            <% else %>
              <li class="dropdown">
                <a class="dropdown-toggle hvr-pulse" id="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-sign-in" aria-hidden="true"></i>
                <span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-background">
                  <li class="dropdown-hover"><%= link_to "Register", new_user_path, class: "nav-links"  %></li>
                  <li role="separator" class="divider"></li>
                  <li class="dropdown-hover"><%= link_to "Sign In", new_session_path, class: "nav-links"  %></li>
                  <li class="dropdown-hover"><%= link_to "Sign In with LinkedIn", sign_in_with_linkedin_path, class: "nav-links"  %></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
<!-- body -->
    <%= flash[:notice] || flash[:alert] %>
    <div id="body-yield">
      <%= yield %>
    </div>
<!-- footer -->
<footer>
  <div class="home-footer footer navbar-bottom">
    <div class="home-footer-left">
      <div>ProjectName</div>
      <div><%= link_to "About"%></div>
      <div><%= link_to "Contact"%></div>
    </div>
    <div class="home-footer-right">
      <div><%= image_tag "codecore-logo.png", class: "codecore-logo" %></div>
    </div>
  </div>
</footer>
  </body>
</html>
