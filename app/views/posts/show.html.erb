<div class="container">
  <div class="show-container-padding-top">
    <div class="post-container">
      <div class="show-container-padding">
        <!-- Create a post -->
        <div class="center">
        <div class="post-show">
        <h1><%= @post.post_title %></h1>
        <%= image_tag @post.post_image.url(:large)%>
        <p>
          <%= @post.post_body %>
        </p>
        <% if can? :manage, @post %>
          <%= link_to "Edit Post", edit_post_path(@post) %>
          <%= link_to "Delete Post", post_path(@post),
                                     method: :delete,
                                     data: {confirm: "Are you sure you want to delete your post?"}
                                     %>
        <% end %>
        </div>

        <!-- Create a comment -->
        <div class="form-container">
        <h2>Create a Comment</h2>
          <%= simple_form_for [@post, @comment] do |f| %>
            <div>
              <%= f.input :comment_body %>
            </div>
          <%= f.submit class: "btn btn-primary"%>
          <% end %>

        <!-- Display comments -->
        <% if @comment %>
        <div class="left">
        <h2 class="center">Comments:</h2>
          <% @post.comments.each do |comm|%>
          <div class="post-background">
            <%= current_user.full_name %>:
            <div>
              <%= comm.comment_body %>
            </div>
            <% if can? :manage, @comment %>
              <%= link_to "delete", post_comment_path(@post, comm),
                                    method: :delete,
                                    data: {confirm: "Are you sure you want to delete your comment?"}%>
            <% end %>
          </div>
          <% end %>
        <% end %>
        </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
