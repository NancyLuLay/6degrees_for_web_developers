<div class="container">
  <div class="show-container-padding-top">
    <div id="opening-container">
      <div class="show-container-padding">
        <div class="edit-title">Openings</div>
          <%= simple_form_for @user do |f| %>
          <div id="openings">
            <%= f.simple_fields_for :openings do |r| %>
            <%= render "opening_fields", f: r %>
            <% end %>
            <div class="hvr-grow">
              <i class="fa fa-plus-circle" aria-hidden="true"></i>
              <%= link_to_add_association 'Add New Opening', f, :openings %>
            </div>
          </div>
          <div class="btn-form col-md-offset-5 col-md-4 hvr-grow">
            <%= f.button :submit, "Update Openings", class:"btn-opening" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
