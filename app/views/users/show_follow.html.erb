<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <!-- <%# image_tag @user.profile_picture.url(:version_profile_image), class: "profile-pic"%> -->
      <h1><%= @user.full_name %></h1>
      <!-- <span><%# link_to "view my profile", @user %></span> -->
      <!-- <span><b>Posts:</b> <%= @user.posts.count %></span> -->
    </section>
    <section class="stats">
      <!-- <%= render 'shared/stats' %> -->
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to profile_picture_url(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <!-- <h3><%= @title %></h3> -->
    <% if @users.any? %>
      <ul class="users follow">
        <!-- <%# render @users %> -->
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>
