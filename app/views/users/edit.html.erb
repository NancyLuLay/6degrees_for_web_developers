<div class="form-container">
  <div>
    <%= render "update_password" %>
    <h1 class="lobster">Edit your Profile</h3>
    <%= simple_form_for @user do |f| %>
      <%= f.input :profile_picture %>
      <%= f.input :alma_mater, placeholder: "e.g. The Universiry of British Columbia" %>
      <%= f.input :academic_discipline, collection: ["Agricultural Sciences", "Engineering & Technology", "Health Sciences", "Humanities", "Natural Sciences", "Social Sciences"]%>
      <%= f.input :specific_discipline, placeholder: "e.g. Biology & Microbiology"%>
      <%= f.input :specialization, placeholder: "e.g. Cell Biology" %>
      <%= f.input :topic_of_research, placeholder: "e.g. Stress response evasion of the host against infection with HIV-1" %>
      <%= f.input :level_of_education, collection: ["Certificate", "Technical Degree", "Bachelor's Degree", "Master's Degree", "Doctoral Degree", "Post-Doctoral Degree"] %>
      <%= f.input :current_company %>
      <%= f.input :current_position %>
      <%= f.input :website %>
      <%= f.button :submit, "Update" %>
    <% end %>
  </div>
</div>
